{
  "manifest_version": 2,
  "name": "Schoology Wrapper",
  "version": "1.0",
  "description": "Scrapes and relays Schoology assignment data.",
  "permissions": ["<all_urls>", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Schoology Extension"
  }
}
